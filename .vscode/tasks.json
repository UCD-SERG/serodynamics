      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "R: Install Dependencies",
      "type": "shell",
      "command": "Rscript",
      "args": [
        "-e",
        "devtools::install_dev_deps(dependencies = TRUE)"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "R: Build Package",
      "type": "shell",
      "command": "Rscript",
      "args": [
        "-e",
        "devtools::build()"
      ],
      "group": {
